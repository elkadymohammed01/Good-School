<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Sitting.SittingFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/reports_header_bk"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:paddingTop="60dp">
<TextView

    android:id="@+id/dateTextView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/dataTextView_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:layout_alignParentTop="true"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/whiteTextColor"/>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/sitting" />

                <TextView
                    android:id="@+id/salesHeaderTextView"
                    android:text="We want Gave You Amazing Time"
                    android:layout_marginTop="30dp"
                    style="@style/reportContentText" />

                <TextView

                    style="@style/viewParent.headerText"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/whiteTextColor"
                    android:layout_below="@id/salesHeaderTextView"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="70dp"/>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/headerLayout"
                android:layout_marginTop="-80dp">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/whiteTextColor"
                    style="@style/reportsCardStyle">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/reportContentText"
                            android:textColor="@color/colorPrimary"
                            android:text="Love"/>

                        <TextView
                            android:id="@+id/love_all"
                            style="@style/viewParent.headerText"
                            android:textSize="27sp"
                            android:text="0"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="@color/whiteTextColor"
                    style="@style/reportsCardStyle">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/reportContentText"
                            android:textColor="@color/colorPrimary"
                            android:text="View"/>

                        <TextView
                            android:id="@+id/view_all"
                            style="@style/viewParent.headerText"
                            android:textSize="27sp"
                            android:text="0"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardLayout"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/salesImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_name"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/salesImageView">

                        <TextView
                            style="@style/reportContentText"
                            android:text="Name"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:id="@+id/edname"
                            style="@style/viewParent.headerText"
                            android:textSize="21sp"
                            android:text="Name"/>

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/phoneImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_mobile"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/phoneImageView">

                        <TextView
                            style="@style/reportContentText"
                            android:text="Phone"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:id="@+id/edphone"
                            style="@style/viewParent.headerText"
                            android:textSize="17sp"
                            android:text="phone"/>

                    </LinearLayout>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/emailImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_email"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/emailImageView">

                        <TextView
                            style="@style/reportContentText"
                            android:text="Email"
                            android:textColor="@color/colorPrimary"/>
                        <TextView
                            android:id="@+id/edemail"
                            style="@style/viewParent.headerText"
                            android:textSize="17sp"
                            android:text="Email"/>

                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/go_to_gallery"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/pImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_photo_library"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/pImageView">

                        <TextView
                            style="@style/reportContentText"
                            android:text="Gallery"
                            android:textColor="@color/colorPrimary"/>



                    </LinearLayout>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:id="@+id/go_to_love"
                    tools:ignore="MissingConstraints">

                    <ImageView
                        android:id="@+id/plImageView"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_love"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@id/plImageView">

                        <TextView
                            style="@style/reportContentText"
                            android:text="Edit List Of Love"
                            android:textColor="@color/colorPrimary"/>



                    </LinearLayout>


                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/log_out_me"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/ic_log_out"/>
                    <TextView
                        style="@style/reportContentText"
                        android:text="Log Out"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="53dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />
                  </LinearLayout>
            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>