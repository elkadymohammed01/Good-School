<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question_details">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:layout_marginLeft="5dp"
            android:textSize="15dp"
            android:text="Let's Make best Question ."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginTop="5dp"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:text="Question :"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/question"
            android:hint="Question"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <EditText
            android:gravity="center"
            android:id="@+id/choose1"
            android:hint="null"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <EditText
            android:gravity="center"
            android:hint="null"
            android:id="@+id/choose2"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <EditText
            android:gravity="center"
            android:hint="null"
            android:id="@+id/choose3"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <EditText
            android:gravity="center"
            android:hint="null"
            android:id="@+id/choose4"
            android:layout_marginLeft="10dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
    </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginEnd="5dp"
                android:id="@+id/file_choose"
                android:src="@drawable/file_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            <EditText
                android:id="@+id/level"
                android:inputType="number"
                android:hint="Level"
                android:layout_width="50dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/good_answer"
                android:inputType="number"
                android:hint="correct answer"
                android:layout_width="90dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:onClick="add_question_l"
                    android:text="Done"
                    android:gravity="center"
                    android:background="@drawable/custom_login_button"
                    android:layout_width="80dp"
                    android:layout_height="40dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>